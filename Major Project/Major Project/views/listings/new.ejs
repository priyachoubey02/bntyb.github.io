<% layout("/layouts/boilerplate.ejs") %>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <h4>Adding New Place</h4>
            <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">

                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="listings[title]" placeholder="Enter Title" type="text" class="form-control" required>
                    <div class="valid-feedback">Nice</div>
                    <div class="invalid-feedback">Title Required</div>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listings[description]" placeholder="Enter description" class="form-control"></textarea>
                    <div class="valid-feedback">Nice</div>
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Image</label>
                    <input name="listings[image]" placeholder="Upload Image" type="file" class="form-control">
                    <div class="valid-feedback">Nice</div>
                </div>

                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input name="listings[price]" placeholder="Enter Price" type="number" class="form-control" required>
                        <div class="valid-feedback">Nice</div>
                        <div class="invalid-feedback">Enter a valid price</div>
                    </div>
                    
                    <div class="mb-3 col-md-8">
                        <label for="location" class="form-label">Location</label>
                        <input name="listings[location]" placeholder="Enter Location" type="text" class="form-control" required>
                        <div class="valid-feedback">Nice</div>
                        <div class="invalid-feedback">Location Required</div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="country" class="form-label">Country</label>
                    <input name="listings[country]" placeholder="Enter Country Name" type="text" class="form-control" required>
                    <div class="valid-feedback">Nice</div>
                    <div class="invalid-feedback">Country Name Required</div>
                </div>

                <button style="background-color: #fe424d;" class="btn btn-dark">Create</button>
                <button class="btn btn-secondary"><a style="text-decoration: none; color: white;" href="/listings" >Back</a></button>
            
            </form>
        </div>
    </div>
</body>
